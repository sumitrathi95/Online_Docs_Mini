<script>
  $(function() {
      $(document).find('#logout-btn').on('click', function(e)
      {
          e.preventDefault();
          $.ajax({
              type: 'POST',
              url: '/logout',
              statusCode: {
                200: function() {
                  window.location.href = "/login";
                }
              }
          });
      });
  });
</script>
